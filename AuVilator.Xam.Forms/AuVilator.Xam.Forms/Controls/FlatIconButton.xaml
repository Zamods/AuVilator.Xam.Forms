<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuVilator.Xam.Forms.Controls.FlatIconButton">
    <ContentView.Content>
        <Grid x:Name="FlatButton">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="FlatButtonHeight" Height="40" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="FlatButtonIconWidth" Width="Auto"/>
                <ColumnDefinition x:Name="FlatButtonLabelWidth" Width="*"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="FlatButtonImage" Grid.Column="0" Grid.Row="0" Margin="20,0,10,0" Aspect="AspectFit"/>
            <Label x:Name="FlatButtonLabel" Grid.Row="0" Grid.Column="1"  Margin="10,0,0,0" FontSize="Medium" TextColor="White" VerticalOptions="Center"/>
        </Grid>
    </ContentView.Content>
</ContentView>